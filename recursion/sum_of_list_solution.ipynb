   "source": [
    "# Write a Python program to calculate the sum of a list of numbers. (in recursion fashion)\n",
    "\n",
    "def list_sum(num_List):\n",
    "    if len(num_List) == 1:\n",
    "        return num_List[0]\n",
    "    else:\n",
    "        return num_List[0] + list_sum(num_List[1:])\n",
    "        \n",
    "print(list_sum([2, 4, 5, 6, 7]))"
   ]
  }
